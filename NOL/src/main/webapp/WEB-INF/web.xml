<?xml version="1.0" encoding="UTF-8"?>
<web-app 
    xmlns="https://jakarta.ee/xml/ns/jakartaee" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee 
                        https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd"
    version="6.0">

  <display-name>NOL</display-name>

  <!-- Parámetro global de la API REST -->
  <context-param>
    <param-name>centro.baseUrl</param-name>
    <param-value>http://localhost:9090/CentroEducativo</param-value>
  </context-param>

  <!-- Filtro: LogsFilter (registra todas las peticiones) -->
  <filter>
    <filter-name>Logs</filter-name>
    <filter-class>dew.filter.LogsFilter</filter-class>
    <init-param>
      <param-name>logFilePath</param-name>
      <param-value>WEB-INF/logs/accesos.log</param-value>
    </init-param>
    <init-param>
      <param-name>loggingEnabled</param-name>
      <param-value>true</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>Logs</filter-name>
    <url-pattern>/*</url-pattern>
    <dispatcher>REQUEST</dispatcher>
    <dispatcher>FORWARD</dispatcher>
  </filter-mapping>

  <!-- Filtro: DataAuthFilter (autenticación contra API REST) -->
  <filter>
    <filter-name>DataAuthFilter</filter-name>
    <filter-class>dew.filter.DataAuthFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>DataAuthFilter</filter-name>
    <url-pattern>/alumno/*</url-pattern>
    <url-pattern>/profesor/*</url-pattern>
    <url-pattern>/inicio</url-pattern>
    <url-pattern>/asignatura/*</url-pattern>
    <url-pattern>/asignaturas/*</url-pattern>
    <dispatcher>REQUEST</dispatcher>
  </filter-mapping>

  <!-- Página de bienvenida -->
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>

  <!-- Seguridad: zona alumno -->
  <security-constraint>
    <web-resource-collection>
      <web-resource-name>Zona Alumno</web-resource-name>
      <url-pattern>/alumno</url-pattern>
      <url-pattern>/alumno/*</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>rolalu</role-name>
    </auth-constraint>
  </security-constraint>

  <!-- Seguridad: zona profesor -->
  <security-constraint>
    <web-resource-collection>
      <web-resource-name>Zona Profesor</web-resource-name>
      <url-pattern>/profesor</url-pattern>
      <url-pattern>/profesor/*</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>rolpro</role-name>
    </auth-constraint>
  </security-constraint>

  <!-- Seguridad: asignaturas accesibles para ambos -->
  <security-constraint>
    <web-resource-collection>
      <web-resource-name>Zona Asignaturas</web-resource-name>
      <url-pattern>/asignatura</url-pattern>
      <url-pattern>/asignatura/*</url-pattern>
      <url-pattern>/asignaturas</url-pattern>
      <url-pattern>/asignaturas/*</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>rolalu</role-name>
      <role-name>rolpro</role-name>
    </auth-constraint>
  </security-constraint>

  <!-- Seguridad: acceso a /inicio para ambos -->
  <security-constraint>
    <web-resource-collection>
      <web-resource-name>Zona Inicio</web-resource-name>
      <url-pattern>/inicio</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>rolalu</role-name>
      <role-name>rolpro</role-name>
    </auth-constraint>
  </security-constraint>

  <!-- Configuración de login con FORM -->
  <login-config>
    <auth-method>FORM</auth-method>
    <form-login-config>
      <form-login-page>/login.jsp</form-login-page>
      <form-error-page>/login.jsp?error=true</form-error-page>
    </form-login-config>
  </login-config>

  <!-- Declaración de roles -->
  <security-role>
    <role-name>rolalu</role-name>
  </security-role>
  <security-role>
    <role-name>rolpro</role-name>
  </security-role>

  <!-- Páginas de error personalizadas -->
  <error-page>
    <error-code>401</error-code>
    <location>/WEB-INF/jsp/error401.jsp</location>
  </error-page>
  <error-page>
    <error-code>404</error-code>
    <location>/WEB-INF/jsp/error404.jsp</location>
  </error-page>

</web-app>


